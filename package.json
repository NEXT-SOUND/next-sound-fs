{
  "name": "universal-app-starter",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "web": "cd apps/web && yarn start",
    "ios": "cd apps/native && yarn ios",
    "prebuild": "cd apps/native && expo prebuild",
    "android": "cd apps/native && yarn android",
    "backend": "cd apps/backend && yarn dev",
    "backend:offline": "cd apps/backend && yarn sls:offline",
    "backend:ddb": "cd apps/backend && yarn ddb:start",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@1.22.19",
  "devDependencies": {
    "clsx": "^2.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.3.2",
    "tailwind-merge": "^2.5.2",
    "turbo": "^2.0.4"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-native": "0.76.2",
    "react-native-web": "~0.19.13",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "dayjs": "^1.11.13",
    "lucide-react": "^0.469.0",
    "moti": "^0.29.0",
    "react-i18next": "^15.5.3",
    "solito": "^4.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.1"
  }
}
